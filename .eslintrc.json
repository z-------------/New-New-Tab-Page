{
    "env": {
        "browser": true,
        "es6": true
    },
    "globals": {
        "chrome": false
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [ "error", 2 ],
        "quotes": [ "error", "double" ],
        "semi": [ "warn", "never" ],
        "no-undef": [ "off" ],
        "no-console": [ "off" ],
        "eqeqeq": [ "error", "always" ],
        "no-eval": "error",
        "no-floating-decimal": "error",
        "space-before-function-paren": [ "error", "never" ],
        "space-before-blocks": [ "error", "always" ]
    }
}